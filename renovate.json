{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
      "config:base",
      ":timezone(Asia/Tokyo)"
  ],
  "automergeSchedule": [
    "before 4am on Thursday"
  ],
  "enabledManagers": [
      "gradle"
  ],
  "labels": [
      "dependencies",
      "renovate"
  ],
  "dependencyDashboard": true,
  "prHourlyLimit": 0,
  "prConcurrentLimit": 5,
  "packageRules": [
      {
          "matchUpdateTypes": [
              "minor",
              "patch",
              "pin",
              "digest"
          ],
          "platformAutomerge": true
      }
  ]
}