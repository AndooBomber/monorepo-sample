{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
      "config:base",
      ":timezone(Asia/Tokyo)"
  ],
  "enabledManagers": [
      "npm"
  ],
  "labels": [
      "dependencies",
      "renovate"
  ],
  "dependencyDashboard": true,
  "packageRules": [
      {
          "matchDepTypes": [
              "devDependencies"
          ],
          "automerge": true,
          "major": {
              "automerge": false
          }
      },
      {
          "matchUpdateTypes": [
              "minor",
              "patch",
              "pin",
              "digest"
          ],
          "automerge": true
      }
  ]
}